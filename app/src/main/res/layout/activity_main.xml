<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="22dp">

    <TextView
        android:id="@+id/labelMain"
        android:layout_width="236dp"
        android:layout_height="49dp"
        android:text="Форма регистрации"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="47dp" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="212dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="ФИО"
        android:inputType="text"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="122dp" />

    <Button
        android:id="@+id/btnReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="568dp" />

    <RadioButton
        android:id="@+id/rbM"
        android:layout_width="107dp"
        android:layout_height="49dp"
        android:text="Мужской"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="195dp" />

    <RadioButton
        android:id="@+id/rbF"
        android:layout_width="104dp"
        android:layout_height="49dp"
        android:text="Женский"
        tools:layout_editor_absoluteX="250dp"
        tools:layout_editor_absoluteY="195dp" />

    <TextView
        android:id="@+id/labelName"
        android:layout_width="113dp"
        android:layout_height="26dp"
        android:text="Введите ФИО:"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="137dp" />

    <TextView
        android:id="@+id/labelRb"
        android:layout_width="113dp"
        android:layout_height="25dp"
        android:text="Выберите пол:"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="208dp" />

    <TextView
        android:id="@+id/labelDifficulty"
        android:layout_width="97dp"
        android:layout_height="27dp"
        android:text="Сложность:"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="331dp" />

    <TextView
        android:id="@+id/labelDate"
        android:layout_width="124dp"
        android:layout_height="26dp"
        android:text="Дата рождения:"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="395dp" />

    <TextView
        android:id="@+id/labelCbox"
        android:layout_width="53dp"
        android:layout_height="28dp"
        android:text="Курс:"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="272dp" />

    <Spinner
        android:id="@+id/cboxCourse"
        android:layout_width="108dp"
        android:layout_height="48dp"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="261dp" />

    <SeekBar
        android:id="@+id/sbDifficulty"
        android:layout_width="168dp"
        android:layout_height="32dp"
        android:max="3"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="326dp" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="147dp"
        android:layout_height="31dp"
        android:ems="10"
        android:inputType="date"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="395dp" />

</androidx.constraintlayout.widget.ConstraintLayout>